v: 1
image:
  tag: $IMAGE_TAG
  pullPolicy: Never

config:
  providers:
    - kind: okta
      domain: $OKTA_DOMAIN
      clientID: $OKTA_CLIENT_ID
      clientSecret: plaintext:$OKTA_SECRET
      apiToken: plaintext:$OKTA_SECRET
  groups:
    - name: Everyone
      provider: okta
      roles:
        - kind: cluster-role
          name: cluster-admin
          destinations:
            - kind: kubernetes

engine:
  v: 1
  name: docker-desktop
  image:
    tag: $IMAGE_TAG
    pullPolicy: Never
  service:
    ports:
      - name: https
        port: 8443
        targetPort: 443
