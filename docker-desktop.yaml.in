logLevel: debug
config:
  providers:
    - kind: okta
      domain: $OKTA_DOMAIN
      clientID: $OKTA_CLIENT_ID
      clientSecret: $OKTA_CLIENT_SECRET
  groups:
    - name: Everyone
      provider: okta
      grants:
        - kind: cluster-role
          name: cluster-admin
          destinations:
            - kind: kubernetes

image:
  tag: $IMAGE_TAG
  pullPolicy: Never

engine:
  logLevel: debug
  config:
    name: docker-desktop

  image:
    tag: $IMAGE_TAG
    pullPolicy: Never
  service:
    ports:
      - name: https
        port: 8443
        targetPort: 443
