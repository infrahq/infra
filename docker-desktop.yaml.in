global:
  image:
    tag: $IMAGE_TAG
    pullPolicy: Never

server:
  service:
    type: LoadBalancer

  additionalProviders:
    - name: okta
      url: $OKTA_DOMAIN
      clientID: $OKTA_CLIENT_ID
      clientSecret: $OKTA_CLIENT_SECRET

  additionalGrants:
    - group: Everyone
      role: cluster-admin
      resource: kubernetes.docker-desktop

engine:
  service:
    type: LoadBalancer
    securePort: 8443 
  
  config:
    name: docker-desktop

  image:
    tag: $IMAGE_TAG
    pullPolicy: Never
