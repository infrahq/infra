log-level: debug
image:
  tag: $IMAGE_TAG
  pullPolicy: Never

config:
  secrets:
    - kind: kubernetes
      namespace: infrahq
  providers:
    - kind: okta
      domain: $OKTA_DOMAIN
      clientID: $OKTA_CLIENT_ID
      clientSecret: kubernetes:$OKTA_SECRET/clientSecret
      apiToken: kubernetes:$OKTA_SECRET/apiToken
  groups:
    - name: Everyone
      roles:
        - kind: cluster-role
          name: cluster-admin
          destinations:
            - labels: [kubernetes]

engine:
  name: docker-desktop
  image:
    tag: $IMAGE_TAG
    pullPolicy: Never
  service:
    ports:
      - name: https
        port: 8443
        targetPort: 443
  log-level: debug
